 //https://www.hackerrank.com/challenges/plus-minus/problem?isFullScreen=true
 
 float pos=0,neg=0,zro=0;
    for(int i=0;i<arr.size();i++){
        if(arr[i]>0)pos++;
        else if (arr[i]<0)neg++;
        else if (arr[i]==0)zro++;
    }
       cout<<pos/arr.size()<<endl;
       cout<<neg/arr.size()<<endl;
       cout<<zro/arr.size()<<endl;
