//https://www.codechef.com/problems/FINDSHOES

 #include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	int n,m;
	cin>>t;
	
	for(int i=0;i<t;i++){
	    cin>>n>>m;
	    if(n<m){
	        cout<<n<<endl;
	    }
	    else if(n>m){
	        cout<<2*(n-m)+m<<endl;
	    }
	    else if (n=m){
	        cout<<n<<endl;
	    }
	    
	}
	
	
	return 0;
}
